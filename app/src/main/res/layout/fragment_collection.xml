<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.moralabs.hacooknew.presentation.collection.CollectionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.collection.CollectionFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/homeToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:text="@string/collection_title"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>

        <HorizontalScrollView
            android:id="@+id/typeSelectCollectionScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:src="@color/time_green"
                        android:alpha="0.8"
                        android:background="@drawable/fruit"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_fruit"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:src="#585858"
                        android:alpha="0.8"
                        android:background="@drawable/salad"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_salad"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:src="#585858"
                        android:alpha="0.8"
                        android:background="@drawable/breakfast"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_breakfast"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:src="#585858"
                        android:alpha="0.8"
                        android:background="@drawable/dinner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_dinner"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:src="#585858"
                        android:alpha="0.8"
                        android:background="@drawable/lunch"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_lunch"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </HorizontalScrollView>


        <ImageView
            android:id="@+id/gridViewImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeSelectCollectionScrollView"
            android:src="@drawable/ic_grid"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/typeSelectCollectionScrollView"
            app:layout_constraintStart_toEndOf="@+id/gridViewImg"
            android:src="@drawable/ic_list"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainCollectionRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gridViewImg"/>

  




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>